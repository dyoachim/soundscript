<div class='container'>
	<div class='login_form'>
		<%=form_for(@user,:html => {:class => "loginform"}) do |f| %>
			<%= f.label :email %>
			<%= f.text_field :email,:class => "input_fields" %><br>

			<%= f.label :password %>
			<%= f.password_field :password, :class => "input_fields" %><br>

			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation,:class => "input_fields" %><br><br>

			<%= f.submit "Update!", :class => "submit" %>
			<%end%>

	</div>
</div>


