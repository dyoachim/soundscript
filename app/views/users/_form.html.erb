

<%=form_for @user,:html => {:class => "create_form"} do |f| %>
	<%= f.label :username %>
	<%= f.text_field :username, :class => "input_fields" %><br><br>

	<%= f.label :email %>
	<%= f.text_field :email, :class => "input_fields" %><br><br>
	
	<%= f.label :password %>
	<%= f.password_field :password, :class => "input_fields" %><br><br>
	
	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation, :class => "input_fields" %><br><br>

	<%= f.submit "Create Me!", :class => "submit" %>
	<%end%>


