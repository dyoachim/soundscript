
<%=form_for @user,:html => {:class => "loginform"} do |f| %>
	<%= f.label :username %>
	<%= f.text_field :username %><br><br>

	<%= f.label :email %>
	<%= f.text_field :email %><br><br>
	
	<%= f.label :password %>
	<%= f.password_field :password %><br><br>
	
	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %><br><br>

	<%= f.submit "Create Me!", :class => "submit" %>
	<%end%>


